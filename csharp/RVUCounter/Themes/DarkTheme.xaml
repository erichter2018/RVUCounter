<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Dark Theme Colors -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#2D2D2D"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#383838"/>
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#1A1A1A"/>
    <SolidColorBrush x:Key="StatusBarBackgroundBrush" Color="#252525"/>
    
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#A0A0A0"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#4DA8FF"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="#336600"/>
    <SolidColorBrush x:Key="CompBrush" Color="#90EE90"/>
    <SolidColorBrush x:Key="DangerBrush" Color="#663300"/>
    <SolidColorBrush x:Key="LightAccentBrush" Color="#334DA8FF"/>
    <SolidColorBrush x:Key="AlternatingRowBackgroundBrush" Color="#333333"/>
    
    <SolidColorBrush x:Key="BorderBrush" Color="#444"/>
    <SolidColorBrush x:Key="SeparatorBrush" Color="#3A3A3A"/>
    
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#404040"/>
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#505050"/>
    <SolidColorBrush x:Key="ButtonTextBrush" Color="#E0E0E0"/>

    <SolidColorBrush x:Key="HoverBackgroundBrush" Color="#404040"/>
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#252525"/>
    
    <SolidColorBrush x:Key="HeaderTextBrush" Color="White"/>
    <SolidColorBrush x:Key="HeaderIconBrush" Color="#888"/>

    <!-- Pace car marker (white for dark mode) -->
    <SolidColorBrush x:Key="PaceMarkerBrush" Color="White"/>

</ResourceDictionary>
