<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Light Theme Colors -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FAFAFA"/>
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#2D3436"/>
    <SolidColorBrush x:Key="StatusBarBackgroundBrush" Color="#F0F0F0"/>
    
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#2D3436"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#636E72"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#0984E3"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="#336600"/>
    <SolidColorBrush x:Key="CompBrush" Color="#228B22"/>
    <SolidColorBrush x:Key="DangerBrush" Color="#663300"/>
    <SolidColorBrush x:Key="LightAccentBrush" Color="#E8F4FD"/>
    <SolidColorBrush x:Key="AlternatingRowBackgroundBrush" Color="#F9F9F9"/>
    
    <SolidColorBrush x:Key="BorderBrush" Color="#DDD"/>
    <SolidColorBrush x:Key="SeparatorBrush" Color="#EEE"/>
    
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#E8E8E8"/>
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#D0D0D0"/>
    <SolidColorBrush x:Key="ButtonTextBrush" Color="#2D3436"/>

    <SolidColorBrush x:Key="HoverBackgroundBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="White"/>

    <SolidColorBrush x:Key="HeaderTextBrush" Color="White"/>
    <SolidColorBrush x:Key="HeaderIconBrush" Color="#AAA"/>

    <!-- Pace car marker (black for light mode) -->
    <SolidColorBrush x:Key="PaceMarkerBrush" Color="Black"/>

</ResourceDictionary>
