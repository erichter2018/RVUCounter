<Window x:Class="RVUCounter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:RVUCounter.ViewModels"
        xmlns:views="clr-namespace:RVUCounter.Views"
        x:Name="mainWindow"
        Title="RVUCounter" 
        Width="260" Height="580"
        MinWidth="200" MinHeight="400"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip"
        Topmost="{Binding IsAlwaysOnTop}">
    
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    
    <Window.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        
        <!-- Stat Row Style - uses DynamicResource for theming and font sizes -->
        <Style x:Key="StatLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="{DynamicResource FontSizeNormal}"/>
            <Setter Property="Foreground" Value="{DynamicResource SecondaryTextBrush}"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="0,1"/>
        </Style>

        <Style x:Key="StatValue" TargetType="TextBlock">
            <Setter Property="FontSize" Value="{DynamicResource FontSizeNormal}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
            <Setter Property="Margin" Value="8,1,0,1"/>
        </Style>

        <Style x:Key="CompValue" TargetType="TextBlock">
            <Setter Property="FontSize" Value="{DynamicResource FontSizeSmall}"/>
            <Setter Property="Foreground" Value="{DynamicResource CompBrush}"/>
            <Setter Property="Margin" Value="4,1,0,1"/>
        </Style>
        
        <!-- Button Styles -->
        <Style x:Key="ShiftButton" TargetType="Button">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SmallButton" TargetType="Button">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="{DynamicResource FontSizeNormal}"/>
            <Setter Property="Background" Value="{DynamicResource ButtonBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource ButtonTextBrush}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="3" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ButtonHoverBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource HeaderIconBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="{DynamicResource FontSizeMedium}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#20FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <!-- Main Border with shadow -->
    <Border Background="{DynamicResource WindowBackgroundBrush}" CornerRadius="8" Margin="8">
        <Border.Effect>
            <DropShadowEffect BlurRadius="16" ShadowDepth="2" Opacity="0.25"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- Title bar -->
                <RowDefinition Height="Auto"/>  <!-- Top controls -->
                <RowDefinition Height="Auto"/>  <!-- Fatigue warning -->
                <RowDefinition Height="Auto"/>  <!-- Stats -->
                <RowDefinition Height="Auto"/>  <!-- Team Dashboard -->
                <RowDefinition Height="*"/>      <!-- Recent studies -->
                <RowDefinition Height="Auto"/>  <!-- Current study -->
                <RowDefinition Height="Auto"/>  <!-- Status -->
            </Grid.RowDefinitions>
            
            <!-- Title Bar -->
            <Border Grid.Row="0" Background="{DynamicResource HeaderBackgroundBrush}" CornerRadius="8,8,0,0"
                    MouseLeftButtonDown="TitleBar_MouseDown">
                <Grid Margin="10,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📊" FontSize="{DynamicResource FontSizeLarge}" Margin="0,0,6,0"/>
                        <TextBlock Text="RVU Counter" Foreground="{DynamicResource HeaderTextBrush}" FontWeight="SemiBold" FontSize="{DynamicResource FontSizeMedium}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Style="{StaticResource IconButton}" Content="📈" Foreground="#AAA"
                                Command="{Binding OpenStatisticsCommand}" ToolTip="Statistics"/>
                        <Button Style="{StaticResource IconButton}" Content="🔧" Foreground="#AAA"
                                Command="{Binding OpenToolsCommand}" ToolTip="Tools"/>
                        <Button Style="{StaticResource IconButton}" Content="⚙" Foreground="#AAA"
                                Command="{Binding OpenSettingsCommand}" ToolTip="Settings"/>
                        <Button Style="{StaticResource IconButton}" Content="─" Foreground="#AAA"
                                Click="Minimize_Click"/>
                        <Button Style="{StaticResource IconButton}" Content="✕" Foreground="#AAA"
                                Click="Close_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Top Controls Row -->
            <Grid Grid.Row="1" Margin="10,8,10,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Start/Stop Button -->
                <Button Grid.Column="0" Style="{StaticResource ShiftButton}"
                        Background="{DynamicResource SuccessBrush}" Foreground="White"
                        Content="Start Shift" Command="{Binding StartShiftCommand}"
                        Visibility="{Binding IsShiftActive, Converter={StaticResource InverseBoolToVisibility}}"/>
                <Button Grid.Column="0" Style="{StaticResource ShiftButton}"
                        Background="{DynamicResource DangerBrush}" Foreground="White"
                        Content="Stop Shift" Command="{Binding EndShiftCommand}"
                        Visibility="{Binding IsShiftActive, Converter={StaticResource BoolToVisibility}}"/>
                
                <!-- Shift info -->
                <TextBlock Grid.Column="1" Text="{Binding ShiftStatus}"
                           VerticalAlignment="Center" Margin="10,0"
                           FontSize="{DynamicResource FontSizeSmall}" Foreground="{DynamicResource SecondaryTextBrush}"/>

                <!-- Version -->
                <TextBlock Grid.Column="2" Text="{Binding AppVersion}"
                           VerticalAlignment="Center"
                           FontSize="{DynamicResource FontSizeXSmall}" Foreground="{DynamicResource SecondaryTextBrush}"/>
            </Grid>

            <!-- Fatigue Warning Bar -->
            <Border Grid.Row="2" Margin="10,2" Background="#FFF3CD" CornerRadius="4" Padding="8,6"
                    Visibility="{Binding ShowFatigueWarning, Converter={StaticResource BoolToVisibility}}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="⚠️" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" Text="{Binding FatigueWarningMessage}" FontSize="11"
                               Foreground="#856404" TextWrapping="Wrap" VerticalAlignment="Center"/>
                    <Button Grid.Column="2" Content="✕" FontSize="10" Padding="4,2" Margin="8,0,0,0"
                            Background="Transparent" BorderThickness="0" Foreground="#856404" Cursor="Hand"
                            Command="{Binding DismissFatigueWarningCommand}" ToolTip="Dismiss"/>
                </Grid>
            </Border>

            <!-- Stats Panel -->
            <Border Grid.Row="3" Margin="10,4" Background="{DynamicResource PanelBackgroundBrush}" CornerRadius="6" Padding="10,6">
                <StackPanel Grid.IsSharedSizeScope="True">
                    <!-- Total wRVU -->
                    <Grid Visibility="{Binding ShowTotal, Converter={StaticResource BoolToVisibility}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="StatLabel"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Style="{StaticResource StatLabel}" Text="total wRVU:"/>
                        <TextBlock Grid.Column="1" Style="{StaticResource StatValue}" 
                                   Text="{Binding TotalRvu, StringFormat='{}{0:F1}'}"/>
                        <TextBlock Grid.Column="2" Style="{StaticResource CompValue}" 
                                   Text="{Binding TotalCompensation, StringFormat='(${0:N0})'}"
                                   Visibility="{Binding ShowCompTotal, Converter={StaticResource BoolToVisibility}}"/>
                    </Grid>
                    
                    <!-- avg/hour -->
                    <Grid Visibility="{Binding ShowAvg, Converter={StaticResource BoolToVisibility}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="StatLabel"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Style="{StaticResource StatLabel}" Text="avg/hour:"/>
                        <TextBlock Grid.Column="1" Style="{StaticResource StatValue}" 
                                   Text="{Binding AvgPerHour, StringFormat='{}{0:F1}'}"/>
                        <TextBlock Grid.Column="2" Style="{StaticResource CompValue}" 
                                   Text="{Binding AvgCompensationPerHour, StringFormat='(${0:N0})'}"
                                   Visibility="{Binding ShowCompAvg, Converter={StaticResource BoolToVisibility}}"/>
                    </Grid>
                    
                    <!-- last hour -->
                    <Grid Visibility="{Binding ShowLastHour, Converter={StaticResource BoolToVisibility}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="StatLabel"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Style="{StaticResource StatLabel}" Text="last hour:"/>
                        <TextBlock Grid.Column="1" Style="{StaticResource StatValue}" 
                                   Text="{Binding LastHourRvu, StringFormat='{}{0:F1}'}"/>
                        <TextBlock Grid.Column="2" Style="{StaticResource CompValue}" 
                                   Text="{Binding LastHourCompensation, StringFormat='(${0:N0})'}"
                                   Visibility="{Binding ShowCompLastHour, Converter={StaticResource BoolToVisibility}}"/>
                    </Grid>
                    
                    <!-- last full hour -->
                    <Grid Visibility="{Binding ShowLastFullHour, Converter={StaticResource BoolToVisibility}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="StatLabel"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Style="{StaticResource StatLabel}" Text="{Binding LastFullHourRange}" FontSize="{DynamicResource FontSizeXSmall}"/>
                            <TextBlock Style="{StaticResource StatLabel}" Text=" hour:" Margin="2,1,0,1"/>
                        </StackPanel>
                        <TextBlock Grid.Column="1" Style="{StaticResource StatValue}" 
                                   Text="{Binding LastFullHourRvu, StringFormat='{}{0:F1}'}"/>
                        <TextBlock Grid.Column="2" Style="{StaticResource CompValue}" 
                                   Text="{Binding LastFullHourCompensation, StringFormat='(${0:N0})'}"
                                   Visibility="{Binding ShowCompLastFullHour, Converter={StaticResource BoolToVisibility}}"/>
                    </Grid>
                    
                    <!-- est this hour -->
                    <Grid Visibility="{Binding ShowProjected, Converter={StaticResource BoolToVisibility}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="StatLabel"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Style="{StaticResource StatLabel}" Text="est this hour:"/>
                        <TextBlock Grid.Column="1" Style="{StaticResource StatValue}" 
                                   Text="{Binding ProjectedThisHour, StringFormat='{}{0:F1}'}"/>
                        <TextBlock Grid.Column="2" Style="{StaticResource CompValue}" 
                                   Text="{Binding ProjectedCompensation, StringFormat='(${0:N0})'}"
                                   Visibility="{Binding ShowCompProjected, Converter={StaticResource BoolToVisibility}}"/>
                    </Grid>
                    
                    <!-- est shift total -->
                    <Grid Visibility="{Binding ShowProjectedShift, Converter={StaticResource BoolToVisibility}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="StatLabel"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Style="{StaticResource StatLabel}" Text="est shift total:"/>
                        <TextBlock Grid.Column="1" Style="{StaticResource StatValue}" 
                                   Text="{Binding ProjectedShiftTotal, StringFormat='{}{0:F1}'}" 
                                   Foreground="{DynamicResource AccentBrush}"/>
                        <TextBlock Grid.Column="2" Style="{StaticResource CompValue}" 
                                   Text="{Binding ProjectedShiftCompensation, StringFormat='(${0:N0})'}"
                                   Visibility="{Binding ShowCompProjectedShift, Converter={StaticResource BoolToVisibility}}"/>
                    </Grid>
                    
                    <!-- Pace Car - only visible when shift is active AND setting is enabled -->
                    <views:PaceCarControl Margin="0,8,0,0" Cursor="Hand"
                                          Visibility="{Binding IsPaceCarVisible, Converter={StaticResource BoolToVisibility}}"
                                          MouseLeftButtonUp="PaceCar_Click"/>
                </StackPanel>
            </Border>
            
            <!-- Team Dashboard Panel (only visible when enabled) -->
            <Border Grid.Row="4" Margin="10,4" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="4"
                    Visibility="{Binding ShowTeamPanel, Converter={StaticResource BoolToVisibility}}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header (clickable to toggle) -->
                    <Border Grid.Row="0" Background="{DynamicResource PanelBackgroundBrush}" CornerRadius="4,4,0,0" Padding="8,4"
                            Cursor="Hand" MouseLeftButtonDown="TeamPanelHeader_Click">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <!-- Collapse indicator -->
                            <TextBlock Grid.Column="0" Text="{Binding TeamPanelExpandedIcon}" FontSize="10"
                                       Foreground="{DynamicResource SecondaryTextBrush}" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <!-- Title -->
                            <TextBlock Grid.Column="1" FontSize="{DynamicResource FontSizeSmall}" VerticalAlignment="Center">
                                <Run Text="Team" FontWeight="SemiBold" Foreground="{DynamicResource AccentBrush}"/>
                                <Run Text="{Binding TeamStatusMessage}" Foreground="{DynamicResource SecondaryTextBrush}"/>
                            </TextBlock>
                            <!-- Mode toggle (clickable) -->
                            <Border Grid.Column="2" Background="{DynamicResource CardBackgroundBrush}"
                                    CornerRadius="3" Padding="4,1" Cursor="Hand"
                                    MouseLeftButtonDown="TeamModeToggle_Click"
                                    ToolTip="Click to toggle between RVU/hour and Total RVU"
                                    Visibility="{Binding CanShowTeamDetails, Converter={StaticResource BoolToVisibility}}">
                                <TextBlock Text="{Binding TeamModeLabel}" FontSize="9"
                                           Foreground="{DynamicResource AccentBrush}" FontWeight="SemiBold"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Content (collapsible) -->
                    <Border Grid.Row="1" Background="{DynamicResource CardBackgroundBrush}" Padding="8,4"
                            Visibility="{Binding IsTeamPanelExpanded, Converter={StaticResource BoolToVisibility}}">
                        <Grid>
                            <!-- When 4+ peers: show number line with ticks -->
                            <Grid Visibility="{Binding CanShowTeamDetails, Converter={StaticResource BoolToVisibility}}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Number line track with tick marks -->
                                <Grid Grid.Row="0" Height="20" Margin="0,2">
                                    <!-- Track background -->
                                    <Border Height="4" Background="{DynamicResource PanelBackgroundBrush}"
                                            CornerRadius="2" VerticalAlignment="Center"/>

                                    <!-- Tick marks positioned by percentage -->
                                    <ItemsControl ItemsSource="{Binding TeamMembers}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <Canvas/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemContainerStyle>
                                            <Style TargetType="ContentPresenter">
                                                <Setter Property="Canvas.Left">
                                                    <Setter.Value>
                                                        <MultiBinding Converter="{StaticResource PercentToWidthConverter}">
                                                            <Binding Path="PositionPercent"/>
                                                            <Binding Path="ActualWidth" RelativeSource="{RelativeSource AncestorType=ItemsControl}"/>
                                                        </MultiBinding>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </ItemsControl.ItemContainerStyle>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <!-- Tick mark - larger triangle for You, small circle for others -->
                                                <Canvas Margin="-6,0,0,0">
                                                    <!-- "You" marker - Carolina blue triangle pointing down -->
                                                    <Polygon Points="6,0 12,12 0,12"
                                                             Fill="#7BAFD4"
                                                             Visibility="{Binding IsYou, Converter={StaticResource BoolToVisibility}}"
                                                             ToolTip="{Binding DisplayText}"/>
                                                    <!-- Others - gray circle -->
                                                    <Ellipse Width="8" Height="8" Canvas.Left="2" Canvas.Top="6"
                                                             Fill="{DynamicResource SecondaryTextBrush}"
                                                             Visibility="{Binding IsYou, Converter={StaticResource InverseBoolToVisibility}}"
                                                             ToolTip="{Binding DisplayText}"/>
                                                </Canvas>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Grid>

                                <!-- Min/Max labels -->
                                <Grid Grid.Row="1">
                                    <TextBlock Text="{Binding TeamMinLabel}"
                                               FontSize="9" Foreground="{DynamicResource SecondaryTextBrush}"
                                               HorizontalAlignment="Left"/>
                                    <TextBlock Text="{Binding TeamMaxLabel}"
                                               FontSize="9" Foreground="{DynamicResource SecondaryTextBrush}"
                                               HorizontalAlignment="Right"/>
                                </Grid>
                            </Grid>

                            <!-- When no peers: show connecting message -->
                            <TextBlock Text="Connecting..."
                                       FontSize="{DynamicResource FontSizeXSmall}" FontStyle="Italic"
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Visibility="{Binding CanShowTeamDetails, Converter={StaticResource InverseBoolToVisibility}}"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- Recent Studies -->
            <Border Grid.Row="5" Margin="10,4" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Border Grid.Row="0" Background="{DynamicResource PanelBackgroundBrush}" CornerRadius="4,4,0,0" Padding="8,4">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBlock Text="{Binding RecentStudiesLabel}" FontSize="{DynamicResource FontSizeSmall}" FontWeight="SemiBold"
                                           Foreground="{Binding RecentStudiesLabelColor}"/>
                            </StackPanel>
                            <TextBlock Grid.Column="1" Text="{Binding StudyCount, StringFormat='({0})'}" FontSize="{DynamicResource FontSizeSmall}"
                                       Foreground="{DynamicResource SecondaryTextBrush}" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <Button Grid.Column="2" Content="{Binding UndoButtonText}" Padding="6,1" FontSize="{DynamicResource FontSizeXSmall}"
                                    Command="{Binding UndoLastCommand}" VerticalAlignment="Center"
                                    Background="{DynamicResource ButtonBackgroundBrush}"
                                    Foreground="{DynamicResource ButtonTextBrush}"
                                    BorderThickness="0" Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="3" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ButtonHoverBrush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </Border>
                    
                    <ScrollViewer x:Name="RecentStudiesScrollViewer" Grid.Row="1" VerticalScrollBarVisibility="Hidden">
                        <ItemsControl ItemsSource="{Binding RecentStudies}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="4,3" BorderBrush="{DynamicResource SeparatorBrush}" BorderThickness="0,0,0,1"
                                            Background="{DynamicResource CardBackgroundBrush}" Cursor="Hand"
                                            MouseLeftButtonDown="RecentStudy_MouseLeftButtonDown">
                                        <Border.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="View Details"
                                                          Command="{Binding DataContext.ShowStudyDetailsCommand, Source={x:Reference Name=mainWindow}}"
                                                          CommandParameter="{Binding}"/>
                                                <Separator/>
                                                <MenuItem Header="Delete"
                                                          Command="{Binding DataContext.DeleteStudyCommand, Source={x:Reference Name=mainWindow}}"
                                                          CommandParameter="{Binding}"/>
                                            </ContextMenu>
                                        </Border.ContextMenu>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Procedure Name (matches Python: shows procedure, not study type) -->
                                            <TextBlock Grid.Row="0" Grid.Column="0"
                                                       Text="{Binding Procedure}"
                                                       FontFamily="Consolas" FontSize="{DynamicResource FontSizeSmall}"
                                                       TextTrimming="CharacterEllipsis"
                                                       VerticalAlignment="Center"
                                                       Foreground="{Binding StudyType, Converter={StaticResource ModalityColorConverter}}"/>

                                            <!-- RVU (format: X.X RVU - matches Python) -->
                                            <TextBlock Grid.Row="0" Grid.Column="1"
                                                       Text="{Binding Rvu, StringFormat='{}{0:F1} RVU'}"
                                                       FontFamily="Consolas" FontSize="{DynamicResource FontSizeSmall}"
                                                       VerticalAlignment="Center" Margin="4,0,0,0"
                                                       Foreground="{Binding StudyType, Converter={StaticResource ModalityColorConverter}}"/>

                                            <!-- Time Row: Time Ago + Duration (matches Python) - only shown if ShowTime is enabled -->
                                            <TextBlock Grid.Row="1" Grid.Column="0"
                                                       Text="{Binding Timestamp, Converter={StaticResource TimeAgoConverter}}"
                                                       FontFamily="Consolas" FontSize="{DynamicResource FontSizeXSmall}"
                                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                                       Margin="0,1,0,0"
                                                       Visibility="{Binding DataContext.ShowTime, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVisibility}}"/>
                                            <TextBlock Grid.Row="1" Grid.Column="1"
                                                       Text="{Binding DurationSeconds, Converter={StaticResource DurationConverter}}"
                                                       FontFamily="Consolas" FontSize="{DynamicResource FontSizeXSmall}"
                                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                                       HorizontalAlignment="Right" Margin="4,1,0,0"
                                                       Visibility="{Binding DataContext.ShowTime, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVisibility}}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
            
            <!-- Current Study Panel -->
            <Border Grid.Row="6" Margin="10,4" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="{DynamicResource PanelBackgroundBrush}" CornerRadius="4,4,0,0" Padding="8,4">
                        <TextBlock Text="Current Study" FontSize="{DynamicResource FontSizeSmall}" FontWeight="SemiBold"
                                   Foreground="{DynamicResource AccentBrush}"/>
                    </Border>

                    <StackPanel Grid.Row="1" Margin="8,4">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <!-- Shows "already recorded" in red when study is already in database -->
                            <TextBlock FontFamily="Consolas" FontSize="{DynamicResource FontSizeSmall}"
                                       Foreground="{Binding CurrentAccessionColor}"
                                       Text="{Binding CurrentAccessionDisplay}"/>
                            <TextBlock Grid.Column="1" Text="{Binding CurrentDuration}" FontFamily="Consolas"
                                       FontSize="{DynamicResource FontSizeSmall}" Foreground="{DynamicResource SecondaryTextBrush}"/>
                        </Grid>
                        <TextBlock FontFamily="Consolas" FontSize="{DynamicResource FontSizeSmall}" Foreground="{DynamicResource SecondaryTextBrush}">
                            <Run Text="Patient Class: "/><Run Text="{Binding CurrentPatientClass}"/>
                        </TextBlock>
                        <TextBlock FontFamily="Consolas" FontSize="{DynamicResource FontSizeSmall}" Foreground="{DynamicResource SecondaryTextBrush}"
                                   TextTrimming="CharacterEllipsis">
                            <Run Text="Procedure: "/><Run Text="{Binding CurrentProcedure}"/>
                        </TextBlock>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock FontFamily="Consolas" FontSize="{DynamicResource FontSizeSmall}" Foreground="{DynamicResource SecondaryTextBrush}">
                                <Run Text="Study Type: "/><Run Text="{Binding CurrentStudyType}"/>
                            </TextBlock>
                            <TextBlock Grid.Column="1" FontFamily="Consolas" FontSize="{DynamicResource FontSizeSmall}"
                                       Foreground="{DynamicResource AccentBrush}" FontWeight="Bold"
                                       Text="{Binding CurrentStudyRvu, StringFormat='{}{0:F1} RVU'}"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Status Bar -->
            <Border Grid.Row="7" Background="{DynamicResource StatusBarBackgroundBrush}" CornerRadius="0,0,8,8" Padding="10,4">
                <Grid>
                    <TextBlock Text="{Binding StatusMessage}" FontSize="{DynamicResource FontSizeSmall}"
                               Foreground="{DynamicResource SecondaryTextBrush}"/>
                    <TextBlock Text="{Binding ShiftDuration}" FontSize="{DynamicResource FontSizeSmall}"
                               Foreground="{DynamicResource SecondaryTextBrush}" HorizontalAlignment="Right"/>
                </Grid>
            </Border>

            <!-- Study Details Popup Overlay -->
            <Border Grid.RowSpan="8" Background="#80000000"
                    Visibility="{Binding IsStudyDetailsVisible, Converter={StaticResource BoolToVisibility}}"
                    MouseLeftButtonDown="StudyDetailsOverlay_MouseLeftButtonDown">
                <Border Background="{DynamicResource PanelBackgroundBrush}" CornerRadius="8"
                        HorizontalAlignment="Center" VerticalAlignment="Center"
                        MinWidth="220" MaxWidth="280" Padding="16"
                        BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.5"/>
                    </Border.Effect>
                    <StackPanel>
                        <!-- Header -->
                        <Grid Margin="0,0,0,12">
                            <TextBlock Text="Study Details" FontWeight="Bold" FontSize="{DynamicResource FontSizeMedium}"
                                       Foreground="{DynamicResource PrimaryTextBrush}"/>
                            <Button Content="✕" FontSize="12" Padding="4,2" HorizontalAlignment="Right"
                                    Background="Transparent" BorderThickness="0" Cursor="Hand"
                                    Command="{Binding CloseStudyDetailsCommand}"
                                    Foreground="{DynamicResource SecondaryTextBrush}"/>
                        </Grid>

                        <!-- Details -->
                        <TextBlock Text="Procedure:" FontWeight="SemiBold" FontSize="11"
                                   Foreground="{DynamicResource SecondaryTextBrush}"/>
                        <TextBlock Text="{Binding SelectedStudyForDetails.Procedure}" TextWrapping="Wrap"
                                   FontSize="12" Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,2,0,10"/>

                        <TextBlock Text="Study Type:" FontWeight="SemiBold" FontSize="11"
                                   Foreground="{DynamicResource SecondaryTextBrush}"/>
                        <TextBlock Text="{Binding SelectedStudyForDetails.StudyType}"
                                   FontSize="12" Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,2,0,10"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="RVU:" FontWeight="SemiBold" FontSize="11"
                                           Foreground="{DynamicResource SecondaryTextBrush}"/>
                                <TextBlock Text="{Binding SelectedStudyForDetails.Rvu, StringFormat='{}{0:F1}'}"
                                           FontSize="12" Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,2,0,10"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Patient Class:" FontWeight="SemiBold" FontSize="11"
                                           Foreground="{DynamicResource SecondaryTextBrush}"/>
                                <TextBlock Text="{Binding SelectedStudyForDetails.PatientClass}"
                                           FontSize="12" Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,2,0,10"/>
                            </StackPanel>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Time:" FontWeight="SemiBold" FontSize="11"
                                           Foreground="{DynamicResource SecondaryTextBrush}"/>
                                <TextBlock Text="{Binding SelectedStudyForDetails.Timestamp, StringFormat='{}{0:h:mm tt}'}"
                                           FontSize="12" Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,2,0,10"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Duration:" FontWeight="SemiBold" FontSize="11"
                                           Foreground="{DynamicResource SecondaryTextBrush}"/>
                                <TextBlock Text="{Binding SelectedStudyForDetails.DurationSeconds, Converter={StaticResource DurationConverter}}"
                                           FontSize="12" Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,2,0,10"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="Source:" FontWeight="SemiBold" FontSize="11"
                                   Foreground="{DynamicResource SecondaryTextBrush}"/>
                        <TextBlock Text="{Binding SelectedStudyForDetails.Source}"
                                   FontSize="12" Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>
            </Border>
        </Grid>
    </Border>
</Window>
