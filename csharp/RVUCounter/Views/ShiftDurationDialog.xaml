<Window x:Class="RVUCounter.Views.ShiftDurationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Shorter Shift"
        Height="180" Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource WindowBackgroundBrush}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Start Shorter Shift" FontWeight="Bold" FontSize="14"
                   Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="Estimated shift length (hours):" VerticalAlignment="Center"
                       Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,0,10,0"/>
            <!-- Spinner -->
            <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="3">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="HoursTextBox" Grid.Column="0" Width="50" Height="28" FontSize="13"
                             VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                             BorderThickness="0" Text="4" PreviewMouseWheel="HoursTextBox_MouseWheel"/>
                    <Grid Grid.Column="1" Width="18">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <RepeatButton Grid.Row="0" Click="SpinUp_Click" Delay="300" Interval="100"
                                      FontSize="7" Content="&#x25B2;" Padding="2,0" BorderThickness="0"
                                      Background="{DynamicResource ButtonBackgroundBrush}"
                                      Foreground="{DynamicResource SecondaryTextBrush}" Cursor="Hand"/>
                        <RepeatButton Grid.Row="1" Click="SpinDown_Click" Delay="300" Interval="100"
                                      FontSize="7" Content="&#x25BC;" Padding="2,0" BorderThickness="0"
                                      Background="{DynamicResource ButtonBackgroundBrush}"
                                      Foreground="{DynamicResource SecondaryTextBrush}" Cursor="Hand"/>
                    </Grid>
                </Grid>
            </Border>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Cancel" Width="80" Padding="5" Margin="0,0,10,0" Click="Cancel_Click"/>
            <Button Content="Start" Width="80" Padding="5" Click="OK_Click" IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>
