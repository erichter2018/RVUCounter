<Window x:Class="RVUCounter.Views.PaceComparisonDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Compare To..."
        Width="240" SizeToContent="Height"
        WindowStartupLocation="Manual"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Deactivated="Window_Deactivated"
        KeyDown="Window_KeyDown">

    <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1"
            Background="{DynamicResource WindowBackgroundBrush}" CornerRadius="4">
        <StackPanel x:Name="MainPanel" Margin="8,6">

            <!-- Prior Shift -->
            <Border x:Name="PriorOption" Visibility="Collapsed"
                    Background="Transparent" Cursor="Hand" Padding="4,3"
                    MouseLeftButtonUp="Option_Click" MouseEnter="Option_MouseEnter" MouseLeave="Option_MouseLeave">
                <TextBlock x:Name="PriorText" FontSize="11"
                           Foreground="{DynamicResource PrimaryTextBrush}"/>
            </Border>

            <!-- Week Best -->
            <Border x:Name="WeekBestOption" Visibility="Collapsed"
                    Background="Transparent" Cursor="Hand" Padding="4,3"
                    MouseLeftButtonUp="Option_Click" MouseEnter="Option_MouseEnter" MouseLeave="Option_MouseLeave">
                <TextBlock x:Name="WeekBestText" FontSize="11"
                           Foreground="{DynamicResource PrimaryTextBrush}"/>
            </Border>

            <!-- All Time Best -->
            <Border x:Name="BestEverOption" Visibility="Collapsed"
                    Background="Transparent" Cursor="Hand" Padding="4,3"
                    MouseLeftButtonUp="Option_Click" MouseEnter="Option_MouseEnter" MouseLeave="Option_MouseLeave">
                <TextBlock x:Name="BestEverText" FontSize="11"
                           Foreground="{DynamicResource PrimaryTextBrush}"/>
            </Border>

            <!-- This Week Section -->
            <TextBlock x:Name="ThisWeekHeader" Text="This Week:" FontSize="11" FontWeight="SemiBold"
                       Foreground="{DynamicResource PrimaryTextBrush}" Margin="4,10,0,4" Visibility="Collapsed"/>

            <StackPanel x:Name="ThisWeekShifts"/>

            <!-- No shifts message -->
            <TextBlock x:Name="NoShiftsMessage" Text="No historical shifts found"
                       FontSize="11" Foreground="Gray" Margin="4,6" Visibility="Collapsed"/>

            <!-- Separator -->
            <Separator Margin="0,8,0,6" Background="{DynamicResource BorderBrush}"/>

            <!-- Goal Section -->
            <Border x:Name="GoalOption" Background="Transparent" Cursor="Hand" Padding="4,3"
                    MouseLeftButtonUp="Goal_Click" MouseEnter="Option_MouseEnter" MouseLeave="Option_MouseLeave">
                <TextBlock x:Name="GoalText" FontSize="11"
                           Foreground="{DynamicResource PrimaryTextBrush}"/>
            </Border>

            <!-- Goal Editor -->
            <StackPanel x:Name="GoalEditor" Margin="16,4,0,0">
                <StackPanel Orientation="Horizontal" Margin="0,2">
                    <TextBlock Text="RVU/h:" FontSize="10" Foreground="Gray" Width="40" VerticalAlignment="Center"/>
                    <TextBox x:Name="RvuPerHourBox" Width="50" FontSize="10"
                             TextChanged="GoalInput_TextChanged" LostFocus="GoalInput_LostFocus"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,2">
                    <TextBlock Text="Hours:" FontSize="10" Foreground="Gray" Width="40" VerticalAlignment="Center"/>
                    <TextBox x:Name="HoursBox" Width="50" FontSize="10"
                             TextChanged="GoalInput_TextChanged" LostFocus="GoalInput_LostFocus"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,2">
                    <TextBlock Text="Total:" FontSize="10" Foreground="Gray" Width="40" VerticalAlignment="Center"/>
                    <TextBox x:Name="TotalBox" Width="50" FontSize="10"
                             LostFocus="TotalInput_LostFocus"/>
                </StackPanel>
            </StackPanel>

            <!-- Cancel -->
            <TextBlock Text="Cancel" FontSize="11" Foreground="Gray"
                       HorizontalAlignment="Center" Margin="0,10,0,4" Cursor="Hand"
                       MouseLeftButtonUp="Cancel_Click"
                       MouseEnter="Cancel_MouseEnter" MouseLeave="Cancel_MouseLeave"/>
        </StackPanel>
    </Border>
</Window>
