<Window x:Class="RVUCounter.Views.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        xmlns:converters="clr-namespace:RVUCounter.Converters"
        Title="Statistics"
        Width="950" Height="700"
        MinWidth="800" MinHeight="500"
        WindowStartupLocation="Manual"
        Background="{DynamicResource WindowBackgroundBrush}">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:BindingProxy x:Key="Proxy" Data="{Binding}"/>
        <!-- Button Style -->
        <Style x:Key="ViewButton" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" Background="{DynamicResource PanelBackgroundBrush}" CornerRadius="4" 
                                Padding="12,6" Margin="2" Cursor="Hand">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" TextElement.Foreground="{DynamicResource PrimaryTextBrush}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource BorderBrush}"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsChecked" Value="True"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource AccentBrush}"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- PeriodItem ListBox item style -->
        <Style x:Key="PeriodListItem" TargetType="ListBoxItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="LeftPaneColumn" Width="280" MinWidth="200"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel - Period Selection -->
        <Border Grid.Column="0" Background="{DynamicResource PanelBackgroundBrush}" Padding="12">
            <DockPanel>
                <TextBlock DockPanel.Dock="Top" Text="TIME PERIOD" FontWeight="Bold" FontSize="11"
                           Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,0,0,8"/>

                <!-- Category toggle buttons -->
                <WrapPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
                    <RadioButton Style="{StaticResource ViewButton}" Content="Shifts"
                                 IsChecked="{Binding SelectedCategory, Converter={StaticResource StringToBoolConverter}, ConverterParameter=shifts}"
                                 GroupName="Category"/>
                    <RadioButton Style="{StaticResource ViewButton}" Content="Months"
                                 IsChecked="{Binding SelectedCategory, Converter={StaticResource StringToBoolConverter}, ConverterParameter=months}"
                                 GroupName="Category"/>
                    <RadioButton Style="{StaticResource ViewButton}" Content="Years"
                                 IsChecked="{Binding SelectedCategory, Converter={StaticResource StringToBoolConverter}, ConverterParameter=years}"
                                 GroupName="Category"/>
                    <RadioButton Style="{StaticResource ViewButton}" Content="All Time"
                                 IsChecked="{Binding SelectedCategory, Converter={StaticResource StringToBoolConverter}, ConverterParameter=all_time}"
                                 GroupName="Category"/>
                    <RadioButton Style="{StaticResource ViewButton}" Content="Custom"
                                 IsChecked="{Binding SelectedCategory, Converter={StaticResource StringToBoolConverter}, ConverterParameter=custom}"
                                 GroupName="Category"/>
                </WrapPanel>

                <!-- Custom date pickers (visible only in Custom mode) -->
                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,8"
                            Visibility="{Binding ShowCustomDatePickers, Converter={StaticResource BoolToVisibility}}">
                    <TextBlock Text="Start:" FontSize="10" Foreground="{DynamicResource SecondaryTextBrush}"/>
                    <DatePicker SelectedDate="{Binding CustomStartDate}" Margin="0,2,0,6"/>
                    <TextBlock Text="End:" FontSize="10" Foreground="{DynamicResource SecondaryTextBrush}"/>
                    <DatePicker SelectedDate="{Binding CustomEndDate}" Margin="0,2"/>
                </StackPanel>

                <!-- Period items list (visible for shifts/months/years) -->
                <ListBox ItemsSource="{Binding PeriodItems}" SelectedItem="{Binding SelectedPeriodItem}"
                         BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}"
                         Background="{DynamicResource CardBackgroundBrush}" Foreground="{DynamicResource PrimaryTextBrush}"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         ItemContainerStyle="{StaticResource PeriodListItem}"
                         Visibility="{Binding ShowPeriodList, Converter={StaticResource BoolToVisibility}}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="Transparent" Padding="4,2"
                                    Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=ListBox}}">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <!-- Only show context menu for shift items -->
                                            <DataTrigger Binding="{Binding Shift}" Value="{x:Null}">
                                                <Setter Property="ContextMenu" Value="{x:Null}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                        <Setter Property="ContextMenu">
                                            <Setter.Value>
                                                <ContextMenu DataContext="{Binding PlacementTarget.Tag, RelativeSource={RelativeSource Self}}">
                                                    <MenuItem Header="Delete Shift"
                                                              Command="{Binding DeleteShiftCommand}"
                                                              CommandParameter="{Binding PlacementTarget.DataContext.Shift, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                                </ContextMenu>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Border.Style>
                                <TextBlock Text="{Binding DisplayLabel}" FontSize="11" TextWrapping="NoWrap"/>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Border>

        <!-- GridSplitter for resizing left pane -->
        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch"
                      Background="{DynamicResource BorderBrush}" Cursor="SizeWE"/>
        
        <!-- Right Panel - Main Content -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- View Mode Selector -->
            <Border Grid.Row="0" Background="{DynamicResource CardBackgroundBrush}" Padding="12" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1">
                <WrapPanel Orientation="Horizontal">
                    <RadioButton Style="{StaticResource ViewButton}" Content="Summary"
                                 IsChecked="{Binding ViewMode, Converter={StaticResource StringToBoolConverter}, ConverterParameter=summary}"
                                 GroupName="View"/>
                    <RadioButton Style="{StaticResource ViewButton}" Content="Compensation"
                                 IsChecked="{Binding ViewMode, Converter={StaticResource StringToBoolConverter}, ConverterParameter=compensation}"
                                 GroupName="View"/>
                    <RadioButton Style="{StaticResource ViewButton}" Content="Hourly"
                                 IsChecked="{Binding ViewMode, Converter={StaticResource StringToBoolConverter}, ConverterParameter=by_hour}"
                                 GroupName="View"/>
                    <RadioButton Style="{StaticResource ViewButton}" Content="Modality"
                                 IsChecked="{Binding ViewMode, Converter={StaticResource StringToBoolConverter}, ConverterParameter=by_modality}"
                                 GroupName="View"/>
                    <RadioButton Style="{StaticResource ViewButton}" Content="Study Type"
                                 IsChecked="{Binding ViewMode, Converter={StaticResource StringToBoolConverter}, ConverterParameter=by_study_type}"
                                 GroupName="View"/>
                    <RadioButton Style="{StaticResource ViewButton}" Content="Body Part"
                                 IsChecked="{Binding ViewMode, Converter={StaticResource StringToBoolConverter}, ConverterParameter=by_body_part}"
                                 GroupName="View"/>
                    <RadioButton Style="{StaticResource ViewButton}" Content="Patient Class"
                                 IsChecked="{Binding ViewMode, Converter={StaticResource StringToBoolConverter}, ConverterParameter=by_patient_class}"
                                 GroupName="View"/>
                    <RadioButton Style="{StaticResource ViewButton}" Content="All Studies"
                                 IsChecked="{Binding ViewMode, Converter={StaticResource StringToBoolConverter}, ConverterParameter=all_studies}"
                                 GroupName="View"/>
                    <RadioButton Style="{StaticResource ViewButton}" Content="Projection"
                                 IsChecked="{Binding ViewMode, Converter={StaticResource StringToBoolConverter}, ConverterParameter=projection}"
                                 GroupName="View"/>
                    <RadioButton Style="{StaticResource ViewButton}" Content="Comparison"
                                 IsChecked="{Binding ViewMode, Converter={StaticResource StringToBoolConverter}, ConverterParameter=comparison}"
                                 GroupName="View"/>
                    <RadioButton Style="{StaticResource ViewButton}" Content="Trends"
                                 IsChecked="{Binding ViewMode, Converter={StaticResource StringToBoolConverter}, ConverterParameter=trends}"
                                 GroupName="View"/>
                    <RadioButton Style="{StaticResource ViewButton}" Content="Heatmap"
                                 IsChecked="{Binding ViewMode, Converter={StaticResource StringToBoolConverter}, ConverterParameter=heatmap}"
                                 GroupName="View"/>
                    <RadioButton Style="{StaticResource ViewButton}" Content="Insights"
                                 IsChecked="{Binding ViewMode, Converter={StaticResource StringToBoolConverter}, ConverterParameter=insights}"
                                 GroupName="View"/>
                </WrapPanel>
            </Border>
            
            <!-- Period Description with Chart Toggle -->
            <Border Grid.Row="1" Background="{DynamicResource LightAccentBrush}" Padding="12,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="{Binding PeriodDescription}" FontWeight="SemiBold"
                               Foreground="{DynamicResource AccentBrush}" FontSize="14" VerticalAlignment="Center"/>
                    <CheckBox Grid.Column="1" Content="Show Chart" IsChecked="{Binding ChartEnabled}"
                              Foreground="{DynamicResource SecondaryTextBrush}" VerticalAlignment="Center"
                              Visibility="{Binding ShowChartToggle, Converter={StaticResource BoolToVisibility}}"/>
                </Grid>
            </Border>

            <!-- Trends Options Bar (only visible in Trends view) -->
            <Border Grid.Row="2" Background="{DynamicResource CardBackgroundBrush}" Padding="12,6"
                    BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1"
                    Visibility="{Binding IsTrendsView, Converter={StaticResource BoolToVisibility}}">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Metric:" Foreground="{DynamicResource SecondaryTextBrush}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <RadioButton Content="Total RVU" GroupName="TrendMetric" Foreground="{DynamicResource PrimaryTextBrush}"
                                 IsChecked="{Binding TrendMetric, Converter={StaticResource StringToBoolConverter}, ConverterParameter=rvu}"
                                 VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <RadioButton Content="RVU/h" GroupName="TrendMetric" Foreground="{DynamicResource PrimaryTextBrush}"
                                 IsChecked="{Binding TrendMetric, Converter={StaticResource StringToBoolConverter}, ConverterParameter=rvuPerHour}"
                                 VerticalAlignment="Center" Margin="0,0,24,0"/>
                    <CheckBox Content="Ignore short shifts" IsChecked="{Binding TrendIgnoreShortShifts}"
                              Foreground="{DynamicResource SecondaryTextBrush}" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Charts - shown based on IsChartVisible (combines view setting + user toggle) -->
            <Grid Grid.Row="3" Height="300" Margin="12,0,12,12"
                  Visibility="{Binding IsChartVisible, Converter={StaticResource BoolToVisibility}}">
                <lvc:CartesianChart Series="{Binding ChartSeries}" XAxes="{Binding XAxes}" YAxes="{Binding YAxes}"
                                    Visibility="{Binding ShowCartesianChart, Converter={StaticResource BoolToVisibility}}"/>
                <lvc:PieChart Series="{Binding PieSeries}"
                              Visibility="{Binding ShowPieChart, Converter={StaticResource BoolToVisibility}}"
                              LegendPosition="Right"/>
            </Grid>

            <!-- Data Table with optional side charts -->
            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition x:Name="ChartsSplitterColumn" Width="Auto"/>
                    <ColumnDefinition x:Name="ChartsPaneColumn" Width="320" MinWidth="250" MaxWidth="500"/>
                </Grid.ColumnDefinitions>

                <!-- Main Data Table (hidden when All Studies view) -->
                <DataGrid Grid.Column="0" ItemsSource="{Binding TableData}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      GridLinesVisibility="Horizontal"
                      Background="{DynamicResource CardBackgroundBrush}"
                      BorderThickness="0"
                      RowBackground="{DynamicResource CardBackgroundBrush}"
                      AlternatingRowBackground="{DynamicResource AlternatingRowBackgroundBrush}"
                      HeadersVisibility="Column"
                      CanUserResizeColumns="True"
                      CanUserSortColumns="True"
                      Foreground="{DynamicResource PrimaryTextBrush}"
                      FontSize="13"
                      Margin="12"
                      Visibility="{Binding IsAllStudiesView, Converter={StaticResource InverseBoolToVisibility}}">
                 <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="{DynamicResource PanelBackgroundBrush}"/>
                        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
                        <Setter Property="Padding" Value="8,6"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    </Style>
                    <Style TargetType="DataGridRow">
                        <Style.Triggers>
                            <!-- Section header rows: bold, accent background -->
                            <DataTrigger Binding="{Binding IsHeader}" Value="True">
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Background" Value="{DynamicResource PanelBackgroundBrush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
                            </DataTrigger>
                            <!-- Spacer rows: minimal height -->
                            <DataTrigger Binding="{Binding IsSpacer}" Value="True">
                                <Setter Property="Height" Value="8"/>
                                <Setter Property="IsEnabled" Value="False"/>
                            </DataTrigger>
                            <!-- Total rows -->
                            <DataTrigger Binding="{Binding IsTotal}" Value="True">
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Background" Value="{DynamicResource LightAccentBrush}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="8,4"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Padding="8,4">
                                        <ContentPresenter VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsTotal}" Value="True">
                                <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
                            </DataTrigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{DynamicResource LightAccentBrush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="{Binding Data.Col1Header, Source={StaticResource Proxy}}"
                                        Binding="{Binding Col1}" Width="*" MinWidth="200"/>
                    <DataGridTemplateColumn Header="{Binding Data.Col2Header, Source={StaticResource Proxy}}"
                                            Width="*" MinWidth="200"
                                            Visibility="{Binding Data.ShowCol2, Source={StaticResource Proxy}, Converter={StaticResource BoolToVisibility}}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid HorizontalAlignment="Right" Margin="0,0,8,0">
                                    <!-- Normal display (non-editable rows) -->
                                    <StackPanel Orientation="Horizontal"
                                                Visibility="{Binding IsEditable, Converter={StaticResource InverseBoolToVisibility}}">
                                        <TextBlock Text="{Binding Col2, Converter={StaticResource DollarPartConverter}}"
                                                   Foreground="#4CAF50"/>
                                        <TextBlock Text="{Binding Col2, Converter={StaticResource NonDollarPartConverter}}"
                                                   Foreground="{DynamicResource PrimaryTextBrush}"/>
                                    </StackPanel>
                                    <!-- Spinner display (editable rows) -->
                                    <StackPanel Orientation="Horizontal"
                                                Visibility="{Binding IsEditable, Converter={StaticResource BoolToVisibility}}">
                                        <TextBlock Text="{Binding HintText}" VerticalAlignment="Center" Margin="0,0,8,0"
                                                   Foreground="{DynamicResource SecondaryTextBrush}" FontStyle="Italic"
                                                   Visibility="{Binding HintText, Converter={StaticResource NonEmptyToVisibility}}"/>
                                        <Button Content="âˆ’" Width="22" Height="20" FontWeight="Bold" Padding="0" Margin="0,0,4,0"
                                                Command="{Binding Data.DecrementProjectionValueCommand, Source={StaticResource Proxy}}"
                                                CommandParameter="{Binding EditKey}"
                                                Background="{DynamicResource PanelBackgroundBrush}"
                                                Foreground="{DynamicResource PrimaryTextBrush}"
                                                BorderBrush="{DynamicResource BorderBrush}"/>
                                        <TextBlock Text="{Binding Col2}" VerticalAlignment="Center" MinWidth="30" TextAlignment="Center"
                                                   Foreground="{DynamicResource PrimaryTextBrush}"/>
                                        <Button Content="+" Width="22" Height="20" FontWeight="Bold" Padding="0" Margin="4,0,0,0"
                                                Command="{Binding Data.IncrementProjectionValueCommand, Source={StaticResource Proxy}}"
                                                CommandParameter="{Binding EditKey}"
                                                Background="{DynamicResource PanelBackgroundBrush}"
                                                Foreground="{DynamicResource PrimaryTextBrush}"
                                                BorderBrush="{DynamicResource BorderBrush}"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="{Binding Data.Col3Header, Source={StaticResource Proxy}}"
                                        Binding="{Binding Col3}" Width="90"
                                        Visibility="{Binding Data.ShowCol3, Source={StaticResource Proxy}, Converter={StaticResource BoolToVisibility}}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="Margin" Value="0,0,8,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="{Binding Data.Col4Header, Source={StaticResource Proxy}}"
                                        Binding="{Binding Col4}" Width="90"
                                        Visibility="{Binding Data.ShowCol4, Source={StaticResource Proxy}, Converter={StaticResource BoolToVisibility}}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="Margin" Value="0,0,8,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="{Binding Data.Col5Header, Source={StaticResource Proxy}}"
                                        Binding="{Binding Col5}" Width="90"
                                        Visibility="{Binding Data.ShowCol5, Source={StaticResource Proxy}, Converter={StaticResource BoolToVisibility}}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="Margin" Value="0,0,8,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
                </DataGrid>

                <!-- All Studies DataGrid (with proper column widths and sorting) -->
                <DataGrid Grid.Column="0" ItemsSource="{Binding AllStudiesData}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          GridLinesVisibility="Horizontal"
                          Background="{DynamicResource CardBackgroundBrush}"
                          BorderThickness="0"
                          RowBackground="{DynamicResource CardBackgroundBrush}"
                          AlternatingRowBackground="{DynamicResource AlternatingRowBackgroundBrush}"
                          HeadersVisibility="Column"
                          CanUserResizeColumns="True"
                          CanUserSortColumns="False"
                          Foreground="{DynamicResource PrimaryTextBrush}"
                          FontSize="13"
                          Margin="12"
                          Visibility="{Binding IsAllStudiesView, Converter={StaticResource BoolToVisibility}}">
                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="{DynamicResource PanelBackgroundBrush}"/>
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
                            <Setter Property="Padding" Value="8,6"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                            <Setter Property="Cursor" Value="Hand"/>
                        </Style>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Tag" Value="{Binding DataContext, RelativeSource={RelativeSource AncestorType=DataGrid}}"/>
                            <Setter Property="ContextMenu">
                                <Setter.Value>
                                    <ContextMenu DataContext="{Binding PlacementTarget.Tag, RelativeSource={RelativeSource Self}}">
                                        <MenuItem Header="Delete Study"
                                                  Command="{Binding DeleteStudyCommand}"
                                                  CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                    </ContextMenu>
                                </Setter.Value>
                            </Setter>
                        </Style>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="8,4"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Padding="8,4">
                                            <ContentPresenter VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource LightAccentBrush}"/>
                                    <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <!-- # Column - narrow -->
                        <DataGridTemplateColumn Width="45" MinWidth="40">
                            <DataGridTemplateColumn.Header>
                                <TextBlock Text="#" Cursor="Hand">
                                    <TextBlock.InputBindings>
                                        <MouseBinding MouseAction="LeftClick"
                                                      Command="{Binding Data.SortAllStudiesCommand, Source={StaticResource Proxy}}"
                                                      CommandParameter="RowNumber"/>
                                    </TextBlock.InputBindings>
                                </TextBlock>
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding RowNumberDisplay}" HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <!-- Date Column -->
                        <DataGridTemplateColumn Width="90" MinWidth="80">
                            <DataGridTemplateColumn.Header>
                                <TextBlock Text="Date" Cursor="Hand">
                                    <TextBlock.InputBindings>
                                        <MouseBinding MouseAction="LeftClick"
                                                      Command="{Binding Data.SortAllStudiesCommand, Source={StaticResource Proxy}}"
                                                      CommandParameter="Timestamp"/>
                                    </TextBlock.InputBindings>
                                </TextBlock>
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DateDisplay}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <!-- Time Column -->
                        <DataGridTemplateColumn Width="80" MinWidth="70">
                            <DataGridTemplateColumn.Header>
                                <TextBlock Text="Time" Cursor="Hand">
                                    <TextBlock.InputBindings>
                                        <MouseBinding MouseAction="LeftClick"
                                                      Command="{Binding Data.SortAllStudiesCommand, Source={StaticResource Proxy}}"
                                                      CommandParameter="Timestamp"/>
                                    </TextBlock.InputBindings>
                                </TextBlock>
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding TimeDisplay}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <!-- Procedure Column - wide -->
                        <DataGridTemplateColumn Width="*" MinWidth="200">
                            <DataGridTemplateColumn.Header>
                                <TextBlock Text="Procedure" Cursor="Hand">
                                    <TextBlock.InputBindings>
                                        <MouseBinding MouseAction="LeftClick"
                                                      Command="{Binding Data.SortAllStudiesCommand, Source={StaticResource Proxy}}"
                                                      CommandParameter="Procedure"/>
                                    </TextBlock.InputBindings>
                                </TextBlock>
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Procedure}" TextTrimming="CharacterEllipsis" ToolTip="{Binding Procedure}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <!-- RVU Column - narrow -->
                        <DataGridTemplateColumn Width="60" MinWidth="50">
                            <DataGridTemplateColumn.Header>
                                <TextBlock Text="RVU" Cursor="Hand">
                                    <TextBlock.InputBindings>
                                        <MouseBinding MouseAction="LeftClick"
                                                      Command="{Binding Data.SortAllStudiesCommand, Source={StaticResource Proxy}}"
                                                      CommandParameter="Rvu"/>
                                    </TextBlock.InputBindings>
                                </TextBlock>
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding RvuDisplay}" HorizontalAlignment="Right" Margin="0,0,8,0"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <!-- Duration Column - narrow -->
                        <DataGridTemplateColumn Width="75" MinWidth="60">
                            <DataGridTemplateColumn.Header>
                                <TextBlock Text="Duration" Cursor="Hand">
                                    <TextBlock.InputBindings>
                                        <MouseBinding MouseAction="LeftClick"
                                                      Command="{Binding Data.SortAllStudiesCommand, Source={StaticResource Proxy}}"
                                                      CommandParameter="Duration"/>
                                    </TextBlock.InputBindings>
                                </TextBlock>
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DurationDisplay}" HorizontalAlignment="Right" Margin="0,0,8,0"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- GridSplitter for charts pane (only visible when charts are shown) -->
                <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch"
                              Background="{DynamicResource BorderBrush}" Cursor="SizeWE"
                              Visibility="{Binding IsSideChartsVisible, Converter={StaticResource BoolToVisibility}}"/>

                <!-- Summary View Side Charts Panel -->
                <Border Grid.Column="2" Margin="0,12,12,12"
                        Background="{DynamicResource CardBackgroundBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Visibility="{Binding IsSideChartsVisible, Converter={StaticResource BoolToVisibility}}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Chart Title -->
                        <TextBlock Grid.Row="0" Text="{Binding SideChartTitle}"
                                   FontWeight="SemiBold" FontSize="13"
                                   Foreground="{DynamicResource AccentBrush}"
                                   HorizontalAlignment="Center"
                                   Margin="0,10,0,2"/>

                        <!-- RVU/Studies Toggle (only for summary view) -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,2,0,5"
                                    Visibility="{Binding ShowModalityToggle, Converter={StaticResource BoolToVisibility}}">
                            <RadioButton Content="RVU" FontSize="11" Foreground="{DynamicResource PrimaryTextBrush}"
                                         IsChecked="{Binding ModalityChartMode, Converter={StaticResource StringToBoolConverter}, ConverterParameter=RVU}"
                                         GroupName="ModalityMode" Margin="0,0,10,0"/>
                            <RadioButton Content="Studies" FontSize="11" Foreground="{DynamicResource PrimaryTextBrush}"
                                         IsChecked="{Binding ModalityChartMode, Converter={StaticResource StringToBoolConverter}, ConverterParameter=Studies}"
                                         GroupName="ModalityMode"/>
                        </StackPanel>

                        <!-- Pie Chart (default) -->
                        <lvc:PieChart Grid.Row="2" Series="{Binding PieSeries}"
                                      LegendPosition="Bottom"
                                      LegendTextPaint="{Binding LegendTextPaint}"
                                      LegendTextSize="{Binding LegendTextSize}"
                                      TooltipTextPaint="{Binding TooltipTextPaint}"
                                      TooltipTextSize="{Binding TooltipTextSize}"
                                      MinHeight="180"
                                      Margin="5,0"
                                      Visibility="{Binding ShowSideBarChart, Converter={StaticResource InverseBoolToVisibility}}"/>

                        <!-- Bar Chart with custom legend (for compensation view) -->
                        <Grid Grid.Row="2"
                              Visibility="{Binding ShowSideBarChart, Converter={StaticResource BoolToVisibility}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <lvc:CartesianChart Grid.Row="0"
                                                Series="{Binding SideBarSeries}"
                                                XAxes="{Binding SideBarXAxes}"
                                                YAxes="{Binding SideBarYAxes}"
                                                Sections="{Binding SideBarSections}"
                                                TooltipPosition="Hidden"
                                                LegendPosition="Hidden"
                                                MinHeight="400"
                                                Margin="5,0"
                                                VerticalAlignment="Stretch"/>
                            <!-- Custom Legend -->
                            <ItemsControl Grid.Row="1" ItemsSource="{Binding BarChartLegendItems}"
                                          HorizontalAlignment="Center" Margin="0,5,0,0">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="8,2">
                                            <Ellipse Width="10" Height="10" Margin="0,0,5,0">
                                                <Ellipse.Fill>
                                                    <SolidColorBrush Color="{Binding Color, Converter={StaticResource SKColorToColorConverter}}"/>
                                                </Ellipse.Fill>
                                            </Ellipse>
                                            <TextBlock Text="{Binding Label}" FontSize="11"
                                                       Foreground="{DynamicResource PrimaryTextBrush}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>

                        <!-- Second Chart (only for views that need it) -->
                        <TextBlock Grid.Row="3" Text="{Binding SecondChartTitle}"
                                   FontWeight="SemiBold" FontSize="13"
                                   Foreground="{DynamicResource AccentBrush}"
                                   HorizontalAlignment="Center"
                                   Margin="0,10,0,5"
                                   Visibility="{Binding ShowSecondChart, Converter={StaticResource BoolToVisibility}}"/>
                        <lvc:PieChart Grid.Row="4" Series="{Binding TimePieSeries}"
                                      LegendPosition="Bottom"
                                      LegendTextPaint="{Binding LegendTextPaint}"
                                      LegendTextSize="{Binding LegendTextSize}"
                                      TooltipTextPaint="{Binding TooltipTextPaint}"
                                      TooltipTextSize="{Binding TooltipTextSize}"
                                      MinHeight="180"
                                      Margin="5,0,5,10"
                                      Visibility="{Binding ShowSecondChart, Converter={StaticResource BoolToVisibility}}"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- Summary Bar -->
            <Border Grid.Row="5" Background="{DynamicResource HeaderBackgroundBrush}" Padding="12,8">
                <TextBlock Text="{Binding SummaryText}" Foreground="{DynamicResource HeaderTextBrush}" FontWeight="SemiBold"/>
            </Border>
        </Grid>
    </Grid>
</Window>
