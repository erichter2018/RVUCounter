<Window x:Class="RVUCounter.Views.MonthlyProjectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Monthly Projection"
        Width="320"
        Height="220"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource WindowBackgroundBrush}"
        TextElement.Foreground="{DynamicResource PrimaryTextBrush}">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Monthly projection settings"
                   FontWeight="SemiBold"
                   FontSize="14"
                   Margin="0,0,0,10"/>

        <Grid Grid.Row="1" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Target Shifts" VerticalAlignment="Center"/>
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Width="24" Height="22" Content="-" Click="ShiftsMinus_Click"/>
                <TextBlock x:Name="ShiftsValueText" Width="40" TextAlignment="Center" VerticalAlignment="Center"/>
                <Button Width="24" Height="22" Content="+" Click="ShiftsPlus_Click"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="2" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Extra Hours" VerticalAlignment="Center"/>
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Width="24" Height="22" Content="-" Click="HoursMinus_Click"/>
                <TextBlock x:Name="HoursValueText" Width="40" TextAlignment="Center" VerticalAlignment="Center"/>
                <Button Width="24" Height="22" Content="+" Click="HoursPlus_Click"/>
            </StackPanel>
        </Grid>

        <TextBlock Grid.Row="3"
                   Text="Uses the same monthly projection settings as Statistics."
                   Foreground="{DynamicResource SecondaryTextBrush}"
                   FontSize="11"
                   TextWrapping="Wrap"
                   Margin="0,4,0,0"/>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Width="80" Margin="0,0,8,0" Click="Cancel_Click"/>
            <Button Content="Save" Width="80" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
